<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TestApp.LoginPage"
             BackgroundColor="#000000"
             NavigationPage.HasNavigationBar="False">
    <ScrollView>
        <VerticalStackLayout Padding="30" Spacing="25" VerticalOptions="Center" HorizontalOptions="Center">

            <Label Text="Car Damage Detector"
                   FontSize="20"
                   FontAttributes="Bold"
                   TextColor="White"
                   HorizontalOptions="Center" />

            <Frame BackgroundColor="#1A1A1A"
                   CornerRadius="25"
                   Padding="25"
                   HasShadow="False"
                   WidthRequest="320">

                <VerticalStackLayout Spacing="20">

                    <Label Text="Login"
                           FontSize="24"
                           FontAttributes="Bold"
                           TextColor="White"
                           HorizontalOptions="Center" />

                    <VerticalStackLayout Spacing="5">
                        <Label Text="Username"
                               TextColor="White"
                               FontSize="14" />
                        <Entry x:Name="UsernameEntry"
                               Placeholder="Enter your username"
                               TextColor="White"
                               PlaceholderColor="Gray"
                               BackgroundColor="Transparent"
                               FontSize="16" />
                        <BoxView HeightRequest="1" BackgroundColor="Gray" />
                    </VerticalStackLayout>

                    <VerticalStackLayout Spacing="5">
                        <Grid>
                            <Label Text="Password"
                                   TextColor="White"
                                   FontSize="14"
                                   HorizontalOptions="Start" />
                        </Grid>

                        <Entry x:Name="PasswordEntry"
                               Placeholder="Enter your password"
                               IsPassword="True"
                               TextColor="White"
                               PlaceholderColor="Gray"
                               BackgroundColor="Transparent"
                               FontSize="16" />
                        <BoxView HeightRequest="1" BackgroundColor="Gray" />
                    </VerticalStackLayout>

                    <Button Text="Log In"
                            x:Name="SubmitLoginButton"
                            BackgroundColor="#2E3A59"
                            TextColor="White"
                            FontAttributes="Bold"
                            CornerRadius="25"
                            HeightRequest="50"
                            Clicked="OnLoginClicked" />

                </VerticalStackLayout>
            </Frame>

            <HorizontalStackLayout HorizontalOptions="Center">
                <Label Text="Donâ€™t have an account? "
                       TextColor="White"
                       FontSize="13" />
                <Label Text="Create now"
                       TextColor="#6A95FF"
                       FontAttributes="Bold"
                       FontSize="13">
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnSignUpButtonClicked" />
                    </Label.GestureRecognizers>
                </Label>
            </HorizontalStackLayout>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>